<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/searcbardesign"
    android:layout_margin="10dp"
    android:padding="5dp"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:id="@+id/IvIc"
        android:layout_marginStart="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/IvIc3"
        android:layout_marginBottom="15dp"
        android:background="@drawable/countryicon"
        app:layout_constraintEnd_toStartOf="@+id/TvCountryName"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="wrap_content"

        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toTopOf="@+id/TvLocation"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/poppinsregular"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/IvIc"
        android:text="London, Hackney"
        android:textSize="11dp"
        android:id="@+id/TvCountryName"/>


    <ImageView
        android:layout_width="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:id="@+id/IvIc2"

        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toStartOf="@+id/TvBranchName"

        android:background="@drawable/branchicon"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="25dp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        android:fontFamily="@font/poppinsregular"
        android:layout_height="wrap_content"
        android:text="KFC - Manchester"
        android:textSize="12dp"
        android:id="@+id/TvBranchName"/>




    <ImageView
        android:layout_width="wrap_content"


        android:id="@+id/IvIc3"
        android:layout_marginStart="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/IvIc"
        android:background="@drawable/locationicon"
        android:layout_marginBottom="10dp"
        app:layout_constraintEnd_toStartOf="@+id/TvLocation"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/black"
        android:fontFamily="@font/poppinsregular"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/IvIc3"
        android:text="London, Hackney"
        android:textSize="11dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toBottomOf="@+id/TvBranchName"
        android:id="@+id/TvLocation"/>

</androidx.constraintlayout.widget.ConstraintLayout>
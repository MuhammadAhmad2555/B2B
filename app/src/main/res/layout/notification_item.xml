<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/notificationdesign"
    android:layout_margin="20dp"

    android:padding="12dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/IconEllipse"
        android:layout_width="40dp"
        android:layout_height="40dp"

        android:background="@drawable/ellips"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <ImageView
            android:id="@+id/ivIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_electrician"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />



    </androidx.constraintlayout.widget.ConstraintLayout>


    <TextView
        android:id="@+id/tvJobIdSimple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Job ID:"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/tvDescriptionNot"
        app:layout_constraintStart_toEndOf="@+id/IconEllipse"
        app:layout_constraintTop_toTopOf="@+id/IconEllipse" />
    <TextView
        android:id="@+id/tvJobId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="21782631"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/tvDescriptionNot"
        app:layout_constraintStart_toEndOf="@+id/tvJobIdSimple"
        app:layout_constraintTop_toTopOf="@+id/tvJobIdSimple" />

    <TextView
        android:id="@+id/tvDescriptionNot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Lorem ipsum dolor sit amet consectetur."

        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/IconEllipse"
        app:layout_constraintStart_toEndOf="@+id/IconEllipse" />

    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:text="Just Now"
        android:textSize="13sp"
        android:textColor="@color/dark_gray"
        app:layout_constraintBottom_toBottomOf="@+id/ivStatusIcon"
        app:layout_constraintEnd_toStartOf="@+id/ivStatusIcon"
        app:layout_constraintTop_toTopOf="@+id/ivStatusIcon" />

    <ImageView
        android:id="@+id/ivStatusIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:background="@drawable/ellipscircle"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/tvJobIdSimple"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvJobIdSimple" />


</androidx.constraintlayout.widget.ConstraintLayout>
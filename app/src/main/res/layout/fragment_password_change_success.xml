<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.InitialScreens.PasswordChangeSuccessFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- ImageView for the logo or image at the top -->
            <ImageView
                android:id="@+id/LoIm"
                android:layout_width="match_parent"
                android:scaleType="fitXY"
                android:layout_height="326dp"

                android:src="@drawable/loginimageplain"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/loIm"
                app:layout_constraintWidth_default="wrap"/>


            <ImageView
                android:id="@+id/loIm"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="40dp"
                android:layout_width="wrap_content"
                app:layout_constraintBottom_toTopOf="@+id/loIm2"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/LoIm"
                android:src="@drawable/easefixlogoblue"
                />

            <ImageView
                android:id="@+id/loIm2"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"
                android:layout_width="wrap_content"
                app:layout_constraintBottom_toTopOf="@+id/TvEm"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/loIm"
                android:src="@drawable/settingicon"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:id="@+id/TvEm"

                app:layout_constraintBottom_toTopOf="@+id/Tv4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/loIm2"
                android:text="All Done"
                app:layout_constraintEnd_toEndOf="parent"

                android:textColor="@color/LightBlue"
                android:textStyle="bold"
                android:textSize="20sp"/>


            <!-- EditText for email -->


            <TextView
                android:id="@+id/Tv4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="60dp"
                android:layout_marginTop="5dp"
                android:text="Your Password has been reset"
                android:textColor="@color/Gray"
                android:textSize="14sp"
app:layout_constraintBottom_toTopOf="@+id/SePaBt"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/TvEm" />


            <Button
                android:id="@+id/SePaBt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/buttoncorner"

                android:text="Go to Login Screen"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Tv4" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</FrameLayout>
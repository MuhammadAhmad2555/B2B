<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:layout_width="match_parent"
        android:id="@+id/TvNoteData"
        android:textSize="13sp"
        android:textColor="@color/black"
        android:fontFamily="@font/poppinsregular"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Lorem ipsum dolor sit amet consectetur. Porta nulla vel integer nulla viverra integer. Nisl lectus ut semper nunc quam pulvinar nec tortor. "
        app:layout_constraintBottom_toTopOf="@+id/TvDateTime"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:text="10:00 03-09-2024"
        android:textSize="13sp"
        android:textColor="@color/black"
        android:fontFamily="@font/poppinsregular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TvNoteData"
        android:layout_height="wrap_content"
        android:id="@+id/TvDateTime"/>

    <View
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TvDateTime"
        android:id="@+id/view"
        android:background="@color/Gray"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="10dp"

        android:layout_width="match_parent"
        android:layout_height="1dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>